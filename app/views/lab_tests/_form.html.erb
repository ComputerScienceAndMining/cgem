<div class="main container">
  <%= form_for @lab_test, html: { class: "crud-form", role: "form" } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-toolbox">
      <h3 class="panel-title"><%= @lab_test.new_record? ? t('new_resource', scope: :crud_views, resource: LabTest.model_name.human) : @lab_test.to_s %></h3>
      <div class="panel-toolbar">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to @lab_test, method: :delete, data: { confirm: t('are_you_sure', scope: :crud_views), tooltip: 'tooltip' }, class: "btn btn-danger", title: t('delete_resource', scope: :crud_views, resource: LabTest.model_name.human) do %>
            <%= icon 'trash' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :started_at, class: "control-label" %>
        <%= f.datetime_local_field :started_at, class: "form-control" %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :ended_at, class: "control-label" %>
        <%= f.datetime_local_field :ended_at, class: "form-control" %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :test_status_id, class: "control-label" %>
        <%= f.collection_select :test_status_id, TestStatus.all, :id, :to_s, { prompt: true} , { class: 'form-control' }  %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :test_type_id, class: "control-label" %>
        <%= f.collection_select :test_type_id, TestType.all, :id, :to_s, { prompt: true} , { class: 'form-control' }  %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :specimen_id, class: "control-label" %>
        <%= f.collection_select :specimen_id, Specimen.all, :id, :to_s, { prompt: true} , { class: 'form-control' }  %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :tested_by_id, class: "control-label" %>
        <%= f.collection_select :tested_by_id, User.all, :id, :to_s, { prompt: true} , { class: 'form-control' }  %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :data, class: "control-label" %>
        <%= f.text_field :data, class: "form-control", placeholder: LabTest.human_attribute_name('data') %>
      </div><!-- /.form-group -->
    </div><!-- /.panel-body -->
    <div class="panel-footer panel-footer-toolbox">
      <div class="panel-toolbar pull-right">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to t('cancel', scope: :crud_views), lab_test_path(@lab_test), class: "btn btn-default" %>
        <% else %>
          <%= link_to t('cancel', scope: :crud_views), lab_tests_path, class: "btn btn-default" %>
        <% end %>
        <%= f.submit class: "btn btn-success" %>
      </div><!-- /.panel-toolbar -->
    </div><!-- /.panel-footer -->
  </div><!-- /.panel -->
  <% end %>
</div><!-- /.container -->

