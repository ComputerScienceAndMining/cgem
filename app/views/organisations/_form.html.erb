<div class="main container">
  <%= form_for @organisation, html: { class: "crud-form", role: "form" } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-toolbox">
      <h3 class="panel-title"><%= @organisation.new_record? ? t('new_resource', scope: :crud_views, resource: Organisation.model_name.human) : @organisation.to_s %></h3>
      <div class="panel-toolbar">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to @organisation, method: :delete, data: { confirm: t('are_you_sure', scope: :crud_views), tooltip: 'tooltip' }, class: "btn btn-danger", title: t('delete_resource', scope: :crud_views, resource: Organisation.model_name.human) do %>
            <%= icon 'trash' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: Organisation.human_attribute_name('name') %>
      </div><!-- /.form-group -->
    </div><!-- /.panel-body -->
    <div class="panel-footer panel-footer-toolbox">
      <div class="panel-toolbar pull-right">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to t('cancel', scope: :crud_views), organisation_path(@organisation), class: "btn btn-default" %>
        <% else %>
          <%= link_to t('cancel', scope: :crud_views), organisations_path, class: "btn btn-default" %>
        <% end %>
        <%= f.submit class: "btn btn-success" %>
      </div><!-- /.panel-toolbar -->
    </div><!-- /.panel-footer -->
  </div><!-- /.panel -->
  <% end %>
</div><!-- /.container -->

