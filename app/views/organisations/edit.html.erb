<%= show_error_messages!(@organisation) %>

<div class="container">
  <ol class="breadcrumb">
    <li>
      <% if policy(Organisation).index? %>
        <%= link_to Organisation.model_name.human(count: 2), organisations_path %>
      <% else %>
        <%= Organisation.model_name.human(count: 2) %>
      <% end -%>
    </li>
    <li>
      <% if policy(@organisation).show? %>
        <%= link_to @organisation.to_s, organisation_path(@organisation) %></li>
      <% else %>
        <%= @organisation.to_s %></li>
      <% end -%>
    <li class="active"><%= t('edit', scope: :breadcrumb) %></li>
  </ol>
</div>

<div class="form-wrapper" ng-controller="OrganisationsEditCtrl as editCtrl">
  <%= render 'form' %>
</div>
