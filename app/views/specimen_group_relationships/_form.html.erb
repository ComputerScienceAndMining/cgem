<div class="main container">
  <%= form_for @specimen_group_relationship, html: { class: "crud-form", role: "form" } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-toolbox">
      <h3 class="panel-title"><%= @specimen_group_relationship.new_record? ? t('new_resource', scope: :crud_views, resource: SpecimenGroupRelationship.model_name.human) : @specimen_group_relationship.to_s %></h3>
      <div class="panel-toolbar">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to @specimen_group_relationship, method: :delete, data: { confirm: t('are_you_sure', scope: :crud_views), tooltip: 'tooltip' }, class: "btn btn-danger", title: t('delete_resource', scope: :crud_views, resource: SpecimenGroupRelationship.model_name.human) do %>
            <%= icon 'trash' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :specimen_id, class: "control-label" %>
        <%= f.collection_select :specimen_id, Specimen.all, :id, :to_s, { prompt: true} , { class: 'form-control' }  %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :specimen_group_id, class: "control-label" %>
        <%= f.collection_select :specimen_group_id, SpecimenGroup.all, :id, :to_s, { prompt: true} , { class: 'form-control' }  %>
      </div><!-- /.form-group -->
    </div><!-- /.panel-body -->
    <div class="panel-footer panel-footer-toolbox">
      <div class="panel-toolbar pull-right">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to t('cancel', scope: :crud_views), specimen_group_relationship_path(@specimen_group_relationship), class: "btn btn-default" %>
        <% else %>
          <%= link_to t('cancel', scope: :crud_views), specimen_group_relationships_path, class: "btn btn-default" %>
        <% end %>
        <%= f.submit class: "btn btn-success" %>
      </div><!-- /.panel-toolbar -->
    </div><!-- /.panel-footer -->
  </div><!-- /.panel -->
  <% end %>
</div><!-- /.container -->

