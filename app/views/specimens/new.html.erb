<%= show_error_messages!(@specimen) %>

<div class="container"<%# ng-controller="specimensNewCtrl" %>>
  <ol class="breadcrumb">
    <li>
      <% if policy(WorkOrder).index? %>
        <%= link_to WorkOrder.model_name.human(count: 2), work_orders_path %>
      <% else %>
        <%= WorkOrder.model_name.human(count: 2) %>
      <% end -%>
    </li>
    <li><%= link_to @work_order.to_s, work_order_path(@work_order) %></li>
    <li>
      <% if policy(Specimen).index? %>
        <%= link_to Specimen.model_name.human(count: 2), specimens_path %>
      <% else %>
        <%= Specimen.model_name.human(count: 2) %>
      <% end -%>
    </li>
    <li class="active"><%= t('new', scope: :breadcrumb) %></li>
  </ol>
</div>

<div class="form-wrapper" ng-controller="SpecimensNewCtrl as formCtrl">
  <%= render 'form' %>
</div>
