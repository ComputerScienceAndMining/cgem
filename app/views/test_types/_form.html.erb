<div class="main container">
  <%= form_for @test_type, html: { class: "crud-form", role: "form" } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-toolbox">
      <h3 class="panel-title"><%= @test_type.new_record? ? t('new_resource', scope: :crud_views, resource: TestType.model_name.human) : @test_type.to_s %></h3>
      <div class="panel-toolbar">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to @test_type, method: :delete, data: { confirm: t('are_you_sure', scope: :crud_views), tooltip: 'tooltip' }, class: "btn btn-danger", title: t('delete_resource', scope: :crud_views, resource: TestType.model_name.human) do %>
            <%= icon 'trash' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: TestType.human_attribute_name('name') %>
      </div><!-- /.form-group -->
      <div class="form-group">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, class: "form-control", placeholder: TestType.human_attribute_name('description') %>
      </div><!-- /.form-group -->
      <!-- <div class="form-group">
        <%= f.label :data, class: "control-label" %>
        <%= f.text_field :data, class: "form-control", placeholder: TestType.human_attribute_name('data') %>
      </div> -->
      <dynamic-creator name="test_type[data]" value='<%= @test_type.data.to_json.html_safe %>'></dynamic-creator>
    </div><!-- /.panel-body -->
    <div class="panel-footer panel-footer-toolbox">
      <div class="panel-toolbar pull-right">
        <% if action_name == 'edit' or action_name == 'update' %>
          <%= link_to t('cancel', scope: :crud_views), test_type_path(@test_type), class: "btn btn-default" %>
        <% else %>
          <%= link_to t('cancel', scope: :crud_views), test_types_path, class: "btn btn-default" %>
        <% end %>
        <%= f.submit class: "btn btn-success" %>
      </div><!-- /.panel-toolbar -->
    </div><!-- /.panel-footer -->
  </div><!-- /.panel -->
  <% end %>
</div><!-- /.container -->

