<%= show_error_messages!(@work_order) %>

<div class="container">
  <ol class="breadcrumb">
    <li>
      <% if policy(WorkOrder).index? %>
        <%= link_to WorkOrder.model_name.human(count: 2), work_orders_path %>
      <% else %>
        <%= WorkOrder.model_name.human(count: 2) %>
      <% end -%>
    </li>
    <li>
      <% if policy(@work_order).show? %>
        <%= link_to @work_order.to_s, work_order_path(@work_order) %></li>
      <% else %>
        <%= @work_order.to_s %></li>
      <% end -%>
    <li class="active"><%= t('edit', scope: :breadcrumb) %></li>
  </ol>
</div>

<div class="form-wrapper" ng-controller="WorkOrdersEditCtrl as editCtrl">
  <%= render 'form' %>
</div>
