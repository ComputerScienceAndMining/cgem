<%%= show_error_messages!(@<%= singular_table_name %>) %>

<div class="container">
  <ol class="breadcrumb">
    <li>
      <%% if policy(<%= class_name %>).index? %>
        <%%= link_to <%= class_name %>.model_name.human(count: 2), <%= plural_table_name %>_path %>
      <%% else %>
        <%%= <%= class_name %>.model_name.human(count: 2) %>
      <%% end -%>
    </li>
    <li>
      <%% if policy(@<%= singular_table_name %>).show? %>
        <%%= link_to @<%= singular_table_name %>.to_s, <%= singular_table_name %>_path(@<%= singular_table_name %>) %></li>
      <%% else %>
        <%%= @<%= singular_table_name %>.to_s %></li>
      <%% end -%>
    <li class="active"><%%= t('edit', scope: :breadcrumb) %></li>
  </ol>
</div>

<div class="form-wrapper" ng-controller="<%= plural_table_name.camelize %>EditCtrl as editCtrl">
  <%%= render 'form' %>
</div>
