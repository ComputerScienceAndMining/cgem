<div class="container">
  <ol class="breadcrumb">
    <li><%%= link_to <%= class_name %>.model_name.human.pluralize, <%= plural_table_name %>_path %></li>
    <li class="active"><%%= t('index', scope: :breadcrumb) %></li>
  </ol>
</div>

<div class="main container"<%%# ng-controller="<%= plural_table_name %>IndexCtrl" %>>
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-toolbox">
      <h3 class="panel-title"><%%= <%= class_name %>.model_name.human.pluralize %></h3>
      <div class="panel-toolbar">
        <%%= form_tag <%= plural_table_name %>_path, {method: :get, class: "form-inline", "role" => "form"} do %>
          <div class="input-group">
            <%%= text_field_tag :q, nil, placeholder: t('search', scope: :crud_views), class: 'form-control' %>
            <div class="input-group-btn">
              <%%= button_tag type: 'submit', class: 'btn btn-default', title: t('search_resources', scope: :crud_views, resources: <%= class_name %>.model_name.human.pluralize) , name: '' do %>
                <%%= icon 'search' %>
              <%% end -%>
            </div>
          </div>
        <%% end %>
        <% if false %>
        <%%= link_to <%= plural_table_name %>_path(format: "csv", page: @page), class: "btn btn-default", data: { tooltip: 'tooltip' }, title: t('export_resources', scope: :crud_views, resources: <%= class_name %>.model_name.human.pluralize) do %>
          <%%= icon 'download' %>
        <%% end %>
        <% end %>
        <%% if policy(<%= class_name %>).new? %>
          <%%= link_to new_<%= singular_table_name %>_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: t('new_resource', scope: :crud_views, resource: <%= class_name %>.model_name.human) do %>
            <%%= icon 'plus' %>
          <%% end %>
        <%% end -%>
      </div>
    </div>
    <%% unless @<%= plural_table_name %>.empty? %>
    <div class="table-responsive">
      <table class="table table-striped pretty">
        <thead>
          <tr>
            <th>#</th>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
            <th><%%= <%= class_name %>.human_attribute_name('<%= attribute.name %>') %></th>
<% end -%>
            <th><%%= t('actions', scope: :crud_views) %></th>
          </tr>
        </thead>
        <tbody>
          <%% @<%= plural_table_name %>.each_with_index do |<%= singular_table_name %>, index| %>
          <tr>
            <td><%%= "#{index + 1}" %></td>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
<%- if attribute.reference? -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<%- else -%>
<%- if attribute.name == 'name' -%>
            <td><%%= link_to <%= singular_table_name %>, <%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
<%- else -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<%- end -%>
<%- end -%>
<% end -%>
            <td>
              <div class="btn-group" role="group">
                <%% if policy(<%= singular_table_name %>).show? %>
                  <%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-sm btn-default", data: { tooltip: 'tooltip', title: t('details', scope: :crud_views, resource: <%= class_name %>.model_name.human) } do %>
                    <%%= icon 'list-alt'  %>
                  <%% end -%>
                <%% end -%>

                <%% if policy(<%= singular_table_name %>).edit? %>
                  <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-sm btn-default", data: { tooltip: 'tooltip', title: t('edit', scope: :crud_views, resource: <%= class_name %>.model_name.human) } do %>
                    <%%= icon 'edit'  %>
                  <%% end -%>
                <%% end -%>

                <%% if policy(<%= singular_table_name %>).destroy? %>
                  <%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-sm btn-default", data: { tooltip: 'tooltip', title: t('delete', scope: :crud_views, resource: <%= class_name %>.model_name.human), confirm: t('are_you_sure', scope: :crud_views) }, method: :delete do %>
                    <%%= icon 'trash'  %>
                  <%% end -%>
                <%% end -%>
              </div>
            </td>
          </tr>
          <%% end %>
        </tbody>
      </table>
    </div><!-- /.table-responsive -->
    <%% else %>
    <div class="text-center text-muted">
      <h3><%%= icon 'exclamation-triangle' %> <%%= t('no_resources_found', scope: :crud_views, resources: <%= class_name %>.model_name.human.pluralize) %>.</h3>
    </div>
    <%% end %>
    <div class="panel-footer panel-footer-toolbox">
      <%%= will_paginate @<%= plural_table_name %>, renderer: BootstrapPagination::Rails, inner_window: 2, outer_window: 0 %>
    </div>
  </div>
</div>

<%% content_for :js_rails_data do %>
<script type="text/javascript">
  <%%# Data here will be passed to angular js %>
  var rails_data = {
    'resource': {
      'singular_name': '<%= singular_table_name %>',
      'plural_name': '<%= plural_table_name %>',
    },
    'action_name': '<%%= action_name %>'
  }
</script>
<%% end %>

